<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="294dp"
    android:layout_height="348dp"
    android:background="@drawable/bg_dialog_default">
    
    <ImageView
        android:id="@+id/iv_badge"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_badge_title"
        style="@style/Text_H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/N10"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@id/iv_badge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="음악으로 자신을 지킨자"/>

    <TextView
        android:id="@+id/tv_badge_context"
        style="@style/Text_B2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/N30"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_badge_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="90%의 이용자가 보유한 배지"/>

    <TextView
        android:id="@+id/tv_date"
        style="@style/Text_B4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/N30"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_badge_context"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="2023년 5월 4일 흭득"/>

   <Button
       style="@style/Text_L1"
       android:id="@+id/btn_confirm"
       android:layout_width="262dp"
       android:layout_height="48dp"
       android:text="확인"
       android:textColor="@color/N95"
       android:background="@drawable/bg_button_label_primary_default"
       android:layout_marginTop="16dp"
       app:layout_constraintTop_toBottomOf="@id/tv_date"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>