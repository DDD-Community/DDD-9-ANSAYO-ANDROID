<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/N95"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="12dp"
        android:layout_marginStart="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_search_keyword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_search_bar"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="18dp"
        android:textAppearance="@style/Text_B1"
        android:hint="@string/input_search_keyword"
        android:textColor="@color/N70"
        android:textCursorDrawable="@color/orange_point"
        android:paddingStart="16dp"
        app:layout_constraintTop_toTopOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/background_tab_layout"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:tabSelectedTextColor="@color/N10"
        app:tabTextAppearance="@style/Text_H4"
        app:tabTextColor="@color/N70" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>