    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp">

        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="1dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:badgeThumbnail="@{badge.activeImage}"
            tools:src="@color/orange_point"/>
        <TextView
            android:id="@+id/tv_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{badge.name}"
            android:textColor="@color/N40"
            app:layout_constraintTop_toBottomOf="@id/iv_badge"
            app:layout_constraintStart_toStartOf="@id/iv_badge"
            app:layout_constraintEnd_toEndOf="@id/iv_badge"
            tools:text="최신코스"/>
